<odoo>
    <record id="view_chuc_vu_kanban" model="ir.ui.view">
        <field name="name">quan.ly.chuc.vu.kanban</field>
        <field name="model">quan.ly.chuc.vu</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="ma_chuc_vu"/>
                <field name="ten_chuc_vu"/>
                <field name="so_luong_nhan_su"/>
                <field name="thu_tu_uu_tien"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color_class" t-value="'secondary'"/>
                        <t t-set="icon_class" t-value="'fa-user'"/>

                        <t t-if="record.ma_chuc_vu.raw_value == 'GD'">
                            <t t-set="color_class" t-value="'danger'"/> <t t-set="icon_class" t-value="'fa-star'"/> 
                        </t>
                        <t t-elif="record.ma_chuc_vu.raw_value == 'TP'">
                            <t t-set="color_class" t-value="'warning'"/> <t t-set="icon_class" t-value="'fa-briefcase'"/> 
                        </t>
                        <t t-elif="record.ma_chuc_vu.raw_value == 'TN'">
                            <t t-set="color_class" t-value="'primary'"/> <t t-set="icon_class" t-value="'fa-users'"/> 
                        </t>
                        <t t-elif="record.ma_chuc_vu.raw_value == 'NV'">
                            <t t-set="color_class" t-value="'info'"/> <t t-set="icon_class" t-value="'fa-id-badge'"/> 
                        </t>
                        <t t-elif="record.ma_chuc_vu.raw_value == 'TTS'">
                            <t t-set="color_class" t-value="'secondary'"/> <t t-set="icon_class" t-value="'fa-graduation-cap'"/> 
                        </t>

                        <div t-attf-class="oe_kanban_global_click o_kanban_card d-flex flex-column border-left-{{color_class}}" 
                             style="border-left-width: 5px !important; padding: 15px; background: white; box-shadow: 0 2px 5px rgba(0,0,0,0.05); border-radius: 5px; margin-bottom: 10px;">
                            
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="font-weight-bold" style="font-size: 1.1em; color: #212529;">
                                    <field name="ten_chuc_vu"/>
                                </div>
                                <div t-attf-class="text-{{color_class}}">
                                    <i t-attf-class="fa {{icon_class}} fa-lg"/>
                                </div>
                            </div>

                            <div class="text-muted small mb-3">
                                <span class="font-weight-bold">Mã: </span>
                                <span class="badge badge-light border"><field name="ma_chuc_vu"/></span>
                            </div>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Nhân sự hiện có:</span>
                                <span t-attf-class="badge badge-pill badge-{{color_class}}" style="font-size: 1em; padding: 5px 10px;">
                                    <field name="so_luong_nhan_su"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_chuc_vu_tree" model="ir.ui.view">
        <field name="name">quan.ly.chuc.vu.tree</field>
        <field name="model">quan.ly.chuc.vu</field>
        <field name="arch" type="xml">
            <tree string="Chức vụ" create="0" delete="0" edit="0" import="0"
                  decoration-danger="ma_chuc_vu == 'GD'"
                  decoration-warning="ma_chuc_vu == 'TP'"
                  decoration-primary="ma_chuc_vu == 'TN'"
                  decoration-info="ma_chuc_vu == 'NV'"
                  decoration-muted="ma_chuc_vu == 'TTS'">
                
                <field name="thu_tu_uu_tien" widget="handle"/>
                <field name="ma_chuc_vu" decoration-bf="1" width="100px"/>
                <field name="ten_chuc_vu" decoration-bf="1" width="300px"/>
                <field name="so_luong_nhan_su" sum="Tổng" widget="badge" 
                       decoration-danger="ma_chuc_vu == 'GD'"
                       decoration-warning="ma_chuc_vu == 'TP'"
                       decoration-primary="ma_chuc_vu == 'TN'"
                       decoration-info="ma_chuc_vu == 'NV'"
                       decoration-muted="ma_chuc_vu == 'TTS'"/>
            </tree>
        </field>
    </record>

    <record id="view_chuc_vu_form" model="ir.ui.view">
        <field name="name">quan.ly.chuc.vu.form</field>
        <field name="model">quan.ly.chuc.vu</field>
        <field name="arch" type="xml">
            <form string="Chức vụ" create="0" delete="0" edit="0">
                <sheet>
                    <div class="oe_title">
                        <label for="ten_chuc_vu" class="oe_edit_only"/>
                        <h1><field name="ten_chuc_vu" readonly="1" class="text-primary"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="ma_chuc_vu" readonly="1"/>
                            <field name="thu_tu_uu_tien" readonly="1"/>
                        </group>
                        <group>
                            <field name="so_luong_nhan_su" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Nhân sự đảm nhiệm" class="mt-4 text-primary"/>
                    
                    <field name="nhan_su_ids" readonly="1">
                        <tree decoration-muted="trang_thai == 'nghi_viec'">
                            <field name="code_phong_ban" invisible="1"/> 
                            
                            <field name="ma_nhan_su" decoration-bf="1"/>
                            <field name="ho_ten" decoration-bf="1"/>
                            
                            <field name="phong_ban_id" widget="badge" 
                            decoration-danger="code_phong_ban == 'BGD'"
                            decoration-primary="code_phong_ban == 'IT'"
                            decoration-success="code_phong_ban == 'KD'"
                            decoration-warning="code_phong_ban == 'KT'"
                            decoration-info="code_phong_ban == 'HCNS'"
                            decoration-muted="code_phong_ban == 'MKT'"/>
                            
                            <field name="email" optional="hide"/>
                            <field name="so_dien_thoai"/>
                            
                            <field name="trang_thai" widget="badge" 
                                   decoration-success="trang_thai == 'dang_lam'"
                                   decoration-danger="trang_thai == 'nghi_viec'"/>
                        </tree>
                    </field>

                    <separator string="Mô tả công việc" class="mt-4 text-primary"/>
                    <div class="alert alert-info" role="alert" style="margin-bottom: 10px;">
                        <i class="fa fa-info-circle mr-1"/>
                        <i>Chi tiết trách nhiệm và yêu cầu của chức vụ này.</i>
                    </div>
                    <field name="mo_ta" readonly="1" class="oe_inline" 
                           style="width: 100%; min-height: 100px; padding: 10px; background-color: #f9f9f9; border: 1px solid #dee2e6; border-radius: 4px;"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_chuc_vu" model="ir.actions.act_window">
        <field name="name">Chức vụ</field>
        <field name="res_model">quan.ly.chuc.vu</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_chuc_vu" name="Chức vụ" parent="menu_root_quan_ly" action="action_chuc_vu" sequence="30"/>
</odoo>